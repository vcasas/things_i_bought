<p id="notice"><%= notice %></p>

<h1>Compras</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Coste</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.name %></td>
        <td><%= purchase.cost %></td>
        <td><%= link_to 'Mostrar', purchase %></td>
        <td><%= link_to 'Editar', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Eliminar', purchase, method: :delete, data: { confirm: '¿Confirma la operación?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva compra', new_purchase_path %>
